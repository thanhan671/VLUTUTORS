@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpContextAccessor
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<header id="header-part">
    <!-- header logo support -->

    <div class="navigation">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-md-10 col-sm-9 col-8">
                    <nav class="navbar navbar-expand-lg">


                        <div class="collapse navbar-collapse sub-menu-bar"
                             id="navbarSupportedContent">
                            <ul class="navbar-nav mr-auto">
                                <li class="nav-item">
                                    <a href="/Home">Trang Chủ</a>

                                </li>
                                <li class="nav-item">
                                    <a href="about.html">Tìm Gia Sư</a>
                                </li>
                                <li class="nav-item">
                                    <a href="~/Home/AboutUs">Về Chúng Tôi</a>
                                </li>

                                <li class="nav-item">
                                    <a href="~/Home/Contact">Liên Hệ</a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                    <!-- nav -->
                </div>
                <div class="col-lg-2 col-md-2 col-sm-3 col-4">
                    <div class="right-icon text-right">
                        <ul>
                            @if (@httpContextAccessor.HttpContext.Session.GetString("LoginId") != null)
                            {
                                <li>
                                    <a asp-controller="Accounts" asp-action="Details" asp-route-id="@httpContextAccessor.HttpContext.Session.GetInt32("LoginId")"><i class="fa-solid fa-user-tie active"></i></a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a asp-controller="Accounts" asp-action="Login"><i class="fa-solid fa-user-tie active"></i></a>
                                </li>
                            }
                        </ul>
                    </div>
                    <!-- right icon -->
                </div>
            </div>
            <!-- row -->
        </div>
        <!-- container -->
    </div>
</header>

<!--====== HEADER PART ENDS ======-->