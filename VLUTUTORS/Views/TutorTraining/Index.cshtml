@model VLUTUTORS.Models.Baihoc
@{
    ViewData["Title"] = "Đào tạo gia sư";
    Layout = "~/Views/Shared/_otherPageLayout.cshtml";
}
<form method="post" enctype="multipart/form-data" asp-controller="TutorTraining" asp-action="Index">
