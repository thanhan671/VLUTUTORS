                        <h2>Khoa dao tao gia su</h2>
                    </div>
                </div>
                <div class="course-content my-4">
                    @foreach(var item in @Model.courses)
                    {
                        <button type="submit" name="courseButton" value="@item" ><h3>bài @item.ToString()</h3></button>
                    }
