<!--====== CULTING PART START ======-->
<section>
    <div class="container">
        <div class="row align-items-center justify-content-center pt-20">
            <div class="col-lg-6">
                <div class="count-down-cont mt-50">
                    <img src="~/images/teacher-up-down.png" />
                </div>
                <!-- count down cont -->
            </div>
            <div class="col-lg-5 offset-lg-1 col-md-8">
                <div class="category-form category-form-3 mt-150">
                    <div class="form-title text-center">
                        <h3>Đăng ký tư vấn</h3>
                        <span>Miễn phí </span>
                    </div>
                    <div class="main-form">
                        <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="SendConsulting">
                            <div class="singel-form">
                                @{
                                    if (@httpContextAccessor.HttpContext.Session.GetString("loginName") != null)
                                    {
                                        <input type="text" name="HoTen" value="@httpContextAccessor.HttpContext.Session.GetString("loginName")" data-error="Vui lòng không để trống!." required="required" />
                                        <div class="help-block with-errors"></div>
                                    }
                                    else
                                    {
                                        <input type="text" name="HoTen" placeholder="Họ và tên" data-error="Vui lòng không để trống!." required="required" />
                                        <div class="help-block with-errors"></div>
                                    }
                                }
                            </div>
                            <div class="singel-form">
                                @{
                                    if (@httpContextAccessor.HttpContext.Session.GetString("loginEmail") != null)
                                    {
                                        <input type="text" name="Email" value="@httpContextAccessor.HttpContext.Session.GetString("loginEmail")" data-error="Vui lòng không để trống!." required="required" />
                                        <div class="help-block with-errors"></div>
                                    }
                                    else
                                    {
                                        <input type="text" name="Email" placeholder="Email của bạn" data-error="Vui lòng không để trống!." required="required" />
                                        <div class="help-block with-errors"></div>
                                    }
                                }
                            </div>
                            <div class="singel-form">
                                <input type="tel" name="SDT" placeholder="Điện thoại" data-error="Vui lòng không để trống!." required="required" />
                                <div class="help-block with-errors"></div>
                            </div>
                            <div class="singel-form">
                                <input /> @Html.DropDownList("LoaiTuVan", (IEnumerable<SelectListItem>)ViewData["loaiTuVan"], "Loại Tư Vấn", new { @class = "form-index", @required = "required" })
                                <div class="help-block with-errors"></div>
                            </div>
                            <div class="singel-form">
                                <input type="text" name="NoiDung" placeholder="Nội dung cần tư vấn" data-error="Vui lòng không để trống!." required="required" />
                                <div class="help-block with-errors"></div>
                            </div>
                            <div class="singel-form">
                                <button class="main-btn" type="submit">
                                    Đăng ký tư vấn
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- category form -->
            </div>
        </div>
        <!-- row -->
    </div>
    @if (TempData["message"] != null)
    {
        <script>alert('@TempData["message"]');</script>
    }
    <!-- container -->
</section>
<!--====== CULTING PART ENDS ======-->
