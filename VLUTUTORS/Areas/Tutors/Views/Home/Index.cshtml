@{
    ViewData["Title"] = "Trang chủ";
    Layout = "~/Areas/Tutors/Views/Shared/_TutorsLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2 justify-content-center text-center text-uppercase">
                <div class="col-sm-6">
                    <h1>Thống Kê Gia Sư</h1>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-body">
                            <h3>Tổng số ca dạy của gia sư: <b style="color:red;">@TempData["AllLesson"]</b></h3>
                            <canvas id="myChart" style="width:100%;max-width:600px"></canvas>
                            <a class="btn-5 custom-btn text-center" type="button" href="~/Tutors/Home/DetailStaticLesson">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
                <!-- /.col-md-6 -->
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-body">
                            <h3>Tổng thu nhập đạt được: <b style="color:red;">@TempData["ReportIncome"]</b> đồng</h3>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <h3>Tổng số giờ đã dạy: <b style="color:red;">@TempData["TeachingHours"]</b> giờ</h3>
                        </div>
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col-md-6 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /.content -->
</div>
@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
    <script>
        var xValues = ["Số ca hoàn thành", "Số ca hủy", "Số ca không được đặt", "Số ca đang được đặt", "Số ca chưa được đặt"];
        var yValues = [@TempData["success"], @TempData["cancel"], @TempData["notBooking"], @TempData["booking"], @TempData["registBooking"]];
var barColors = [
  "#b91d47",
  "#00aba9",
  "#2b5797",
  "#e8c3b9",
  "#1e7145"
];

new Chart("myChart", {
  type: "pie",
  data: {
    labels: xValues,
    datasets: [{
      backgroundColor: barColors,
      data: yValues
    }]
  },
  options: {
    title: {
      display: true,
      text: "Thống kê ca dạy của gia sư"
    }
  }
});
</script>
}