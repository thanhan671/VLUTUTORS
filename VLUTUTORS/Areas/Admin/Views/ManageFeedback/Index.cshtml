@model IEnumerable<VLUTUTORS.Models.Lienhe>

@{
    ViewData["Title"] = "Phản hồi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Danh sách phản hồi</h1>
                </div>
                <div class="col-sm-6"></div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">#</th>
                            <th style="width: 20%">Họ tên</th>
                            <th style="width: 20%">SĐT</th>
                            <th style="width: 20%">Môn học</th>
                            <th style="width: 8%" class="text-center">Trạng thái</th>
                            <th style="width: 20%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var index = 0;
                            foreach (var item in Model)
                            {
                                index++;
                                <tr>
                                    <td>
                                        @index
                                    </td>
                                    <td>
                                        <a>@Html.DisplayFor(modelItem => item.HoVaTen)</a>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Sdt)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MonHoc)
                                    </td>
                                    <td class="project-state">

                                        <span class="badge @(item.IdtrangThai == 1 ? "badge-block" : (item.IdtrangThai == 2 ?"badge-warning":"badge-success"))">
                                            @Html.DisplayFor(modelItem => item.TrangThai)
                                        </span>
                                    </td>
                                    <td class="project-actions text-right">
                                        <a asp-action="Detail" asp-route-id="@item.IdlienHe" class="btn btn-primary btn-sm">
                                            <i class="fas fa-folder"> </i>
                                            Xem
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>

        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>
