@using Microsoft.AspNetCore.Http
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model VLUTUTORS.Models.Khoadaotao
@{
    ViewData["Title"] = "Thêm mới bài học";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/Admin">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="~/Admin/ManageCourse">Quản lý khóa đào tạo</a></li>
                    <li class="breadcrumb-item active">Thêm mới bài học</li>
                </ol>
            </div>
        </div>
        <!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <form method="post" enctype="multipart/form-data" asp-controller="ManageCourse" asp-action="AddLessonFile">
        <input type="hidden" asp-for="Link" />
        <section class="content">
            <div class="container" style="margin-top: 20px; margin-bottom: 20px">
                <div class="main-body">
                    <div class="row gutters-sm">
                        <div class="col-md-8">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <h3>Thêm mới bài học</h3>
                                    <hr />
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Tên bài học</h6>
                                        </div>
                                        <input class="col-sm-9 text-secondary" name="TenBaiHoc" id="TenBaiHoc" type="text">
                                    </div>
                                    <hr />
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Tệp bài giảng</h6>
                                        </div>
                                        <input class="col-sm-9 text-secondary"
                                               type="file"
                                               name="tepBaiGiang"
                                               multiple
                                               accept=".doc, .docx, .pdf" />
                                    </div>
                                    <hr />
                                    <div class="row">
                                        <div class="col-12 flex-right mb-4">
                                            <a href='javascript:history.go(-1)' class="btn btn-secondary mr-3">Quay Lại</a>
                                            <input type="submit" value="Lưu" class="btn btn-success" onclick="popup()" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>
    <!-- /.content -->
</div>
<script>
    function popup() {
        alert('Tạo mới thành công!');
    }
    $('#myForm').on('submit', function (e) {
        e.preventDefault(); // Now nothing will happen
    });
</script>


