@using Microsoft.AspNetCore.Http
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Thêm mới tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">

    <!-- Main content -->
    <form method="post" asp-controller="ManageTutors" asp-action="SendMail">
        <section class="content">
            <div class="container" style="margin-top: 20px; margin-bottom: 20px">
                <div class="main-body">
                    <div class="row gutters-sm">
                        <div class="col-md-8">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <h3>Phản hồi cho người đăng ký gia sư</h3>
                                    <hr />
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Mail người nhận</h6>
                                        </div>
                                        <input class="col-sm-9 text-secondary" name="toEmail" id="toEmail" type="text" value="@ViewBag["email"]">
                                    </div>
                                    <hr />
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Tiêu đề mail</h6>
                                        </div>
                                        <input class="col-sm-9 text-secondary" name="mailSubject" id="mailSubject" type="text">
                                    </div>
                                    <hr />
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Nội dung phản hồi</h6>
                                        </div>
                                        <input class="col-sm-9 text-secondary" name="mailBody" id="mailBody" type="text">
                                    </div>
                                    <hr />
                                    <div class="row">
                                        <div class="col-12 flex-right mb-4">
                                            <input type="submit" value="Gửi" class="btn btn-success" onclick="popup()" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>
    <!-- /.content -->
</div>
<script>
    function popup() {
        alert('Gửi mail thành công!');
    }
    $('#myForm').on('submit', function (e) {
        e.preventDefault(); // Now nothing will happen
    });
</script>

