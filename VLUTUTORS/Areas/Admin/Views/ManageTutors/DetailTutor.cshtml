@model VLUTUTORS.Models.TutorViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Chi tiết gia sư";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href='javascript:history.go(-1)'>Quản lý gia sư</a></li>
                    <li class="breadcrumb-item active">Chi tiết gia sư</li>
                </ol>
            </div>
        </div>
        <!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <form asp-action="DetailTutor">

        <section class="content">
            <div class="container" style="margin-top: 20px; margin-bottom: 20px">
                <div class="main-body">
                    <div class="row gutters-sm">
                        <div class="col-md-4 mb-3 center-card">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex flex-column align-items-center text-center">
                                        @foreach (var img in Newtonsoft.Json.JsonConvert.DeserializeObject<List<string>>(Model.Tutor.AnhDaiDien))
                                        {
                                            <img src="~/@Url.Content(img)"
                                                 alt="Admin"
                                                 class="rounded-circle"
                                                 width="150" />
                                        }
                                        <div class="mt-3">
                                            <h4>
                                                @Html.DisplayFor(model => model.Tutor.HoTen)
                                            </h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="row-nowrap">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Email</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            @Html.DisplayFor(model => model.Tutor.Email)
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="row-nowrap">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Khoa</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            @Html.DisplayFor(model => model.Department)
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="row-nowrap">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Ngày sinh</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            @Html.DisplayFor(model => model.Tutor.NgaySinh, "{0:dd/MM/yyyy}")
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="row-nowrap">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Giới tính</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            @Html.DisplayFor(model => model.Gender)
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="row-nowrap">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Số Điện Thoại</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            @Html.DisplayFor(model => model.Tutor.Sdt)
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="row-nowrap">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Số tài khoản</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            @Html.DisplayFor(model => model.Tutor.SoTaiKhoan)
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="row-nowrap">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Tên ngân hàng</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            @Html.DisplayFor(model => model.Bank)
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="row-nowrap">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Điểm trung bình tích lũy</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            @Html.DisplayFor(model => model.Tutor.DiemTrungBinh)
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="row-nowrap">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Giới thiệu bản thân</h6>
                                        </div>
                                        <textarea name="" id="" cols="30" rows="10" readonly>
                                            @Html.DisplayFor(model => model.Tutor.GioiThieu)
                                        </textarea>
                                    </div>
                                    <hr />
                                    <div class="row-nowrap">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">
                                                Giới thiệu bản thân về việc gia sư
                                            </h6>
                                        </div>
                                        <textarea name="" id="" cols="30" rows="10" readonly>
                                            @Html.DisplayFor(model => model.Tutor.DanhGiaVeViecGiaSu)
                                        </textarea>
                                    </div>
                                    <hr />
                                    <div class="row-nowrap">
                                        <h4>Môn gia sư thứ 1:</h4>
                                    </div>
                                    <hr />
                                    <div class="row-nowrap">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Môn gia sư</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            @Html.DisplayFor(model => model.Subject1)
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="row-nowrap">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Tên chứng chỉ/Điểm trung bình môn</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            @Html.DisplayFor(model => model.Tutor.TenChungChiHoacDiemMon1)
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="row-nowrap">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Ảnh minh chứng</h6>
                                        </div>
                                        @foreach (var file in Newtonsoft.Json.JsonConvert.DeserializeObject<List<string>>(Model.Tutor.ChungChiMon1))
                                        {
                                               <p>@Html.ActionLink(file + "  ", "DownloadFile", new { fileName = file, tutorId = Model.Tutor.Id, id = 1 })</p> // id 2 representation for certificate 2
                                        }
                                    </div>

                                    <hr />
                                    <div class="row-nowrap">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Giới thiệu về môn gia sư</h6>
                                        </div>
                                        <textarea name="" id="" cols="30" rows="10" readonly>
                                            @Html.DisplayFor(model => model.Tutor.GioiThieuVeMonGiaSu1)
                                        </textarea>
                                    </div>
                                    <hr />
                                    <div class="row-nowrap">
                                        <h4>Môn gia sư thứ 2:</h4>
                                    </div>
                                    <hr />
                                    <div class="row-nowrap">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Môn gia sư</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            @Html.DisplayFor(model => model.Subject2)
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="row-nowrap">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Tên chứng chỉ/Điểm trung bình môn</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            @Html.DisplayFor(model => model.Tutor.TenChungChiHoacDiemMon2)
                                        </div>
                                    </div>

                                    <hr />
                                    <div class="row-nowrap">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Ảnh minh chứng</h6>
                                        </div>
                                        @foreach (var file in Newtonsoft.Json.JsonConvert.DeserializeObject<List<string>>(Model.Tutor.ChungChiMon2))
                                        {
                                               <p>@Html.ActionLink(file + "  ", "DownloadFile", new { fileName = file, tutorId = Model.Tutor.Id, id = 2 })</p> // id 2 representation for certificate 2
                                        }
                                    </div>

                                    <hr />
                                    <div class="row-nowrap">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Giới thiệu về môn gia sư</h6>
                                        </div>
                                        <textarea name="" id="" cols="30" rows="10" readonly>
                                            @Html.DisplayFor(model => model.Tutor.GioiThieuVeMonGiaSu2)
                                        </textarea>
                                    </div>
                                    <hr />

                                    <div class="row-nowrap">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Điểm khóa đào tạo</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            @Html.DisplayFor(model => model.Tutor.DiemBaiTest)
                                        </div>
                                    </div>
                                    <hr />
                                    @{
                                        if (Model.Tutor.IdxetDuyet != 6)
                                        {
                                            <div class="row-nowrap">
                                                <div class="col-sm-3">
                                                    <h6 class="mb-0">Xét duyệt</h6>
                                                </div>
                                                @Html.DropDownListFor(model => model.Tutor.IdxetDuyet, Model.Status)

                                            </div>
                                            <hr />
                                        }
                                    }
                                    <div class="row">
                                        <div class="col-12 flex-right mb-4">
                                            <a href='javascript:history.go(-1)' class="btn btn-dark">
                                                Quay lại
                                            </a>
                                            @{
                                                if (Model.Tutor.IdxetDuyet != 6)
                                                {
                                                    <input type="submit"
                                                           value="Lưu thay đổi"
                                                           class="btn btn-success" />
                                                }
                                            }

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>
    <!-- /.content -->
</div>

