@model IEnumerable<VLUTUTORS.Models.TutorViewModel>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Gia sư đợi duyệt</h3>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped projects" id="myTable">
            <thead>
                <tr>
                    <th style="width: 1%">#</th>
                    <th style="width: 20%">Tên Gia Sư</th>
                    <th style="width: 20%">Môn Gia Sư</th>
                    <th style="width: 15%">Điểm bài kiểm tra</th>
                    <th style="width: 20%">Trạng thái xét duyệt</th>
                    <th style="width: 15%"></th>
                </tr>
            </thead>
            <tbody>
                @{
                    var index = 0;
                    foreach (var item in Model)
                    {
                        index++;
                        <tr>
                            <td>@index</td>
                            <td>
                                <a>@Html.DisplayFor(modelItem => item.Tutor.HoTen)</a>
                            </td>
                            @{if (item.Subject2 != null)
                                {
                                    <td>@Html.DisplayFor(modelItem => item.Subject1) - @Html.DisplayFor(modelItem => item.Subject2)</td>
                                }
                                else
                                {
                                    <td>@Html.DisplayFor(modelItem => item.Subject1)</td>
                                }
                            }
                            <td>@Html.DisplayFor(modelItem => item.Tutor.DiemBaiTest)</td>
                            <td>@Html.DisplayFor(modelItem => item.ApprovedStatus)</td>
                            <td class="project-actions text-right">
                                <a asp-action="DetailTutor" asp-route-id="@item.Tutor.Id" class="btn btn-primary btn-sm">
                                    <i class="fas fa-folder"> </i>
                                    Xem hồ sơ
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
