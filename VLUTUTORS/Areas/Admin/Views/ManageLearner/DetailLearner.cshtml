@model VLUTUTORS.Models.Taikhoannguoidung

@{
    ViewData["Title"] = "Chi tiết học viên";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href='javascript:history.go(-1)'>Quản lý học viên</a></li>
                    <li class="breadcrumb-item active">Chi tiết học viên</li>
                </ol>
            </div>
        </div>
        <!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <form asp-action="DetailLearner">
        <input type="hidden" asp-for="Id" />
        <section class="content">
            <div class="container" style="margin-top: 20px; margin-bottom: 20px">
                <div class="main-body">
                    <div class="row gutters-sm">
                        <div class="col-md-4 mb-3 center-card">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex flex-column align-items-center text-center">
                                        <img src="~/@Model.AnhDaiDien"
                                             alt="Admin"
                                             class="rounded-circle"
                                             width="150" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="row-nowrap">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Họ và tên</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            @Html.DisplayFor(model => model.HoTen)
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="row-nowrap">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Email</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            @Html.DisplayFor(model => model.Email)
                                        </div>
                                    </div>
                                    <hr />

                                    <div class="row-nowrap">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Trạng thái</h6>
                                        </div>
                                        <select id="trangThai" name="trangThai">
                                            <option value="1" selected="@(Model.TrangThaiTaiKhoan)">Hoạt động</option>
                                            <option value="0" selected="@(!Model.TrangThaiTaiKhoan)">Tạm khóa</option>
                                        </select>

                                    </div>
                                    <hr />

                                    <div class="row">
                                        <div class="col-12 flex-right mb-4">
                                            <a href='javascript:history.go(-1)' class="btn btn-dark" style="margin-right:5px;">
                                                Quay lại
                                            </a>
                                            <input type="submit"
                                                   value="Lưu thay đổi"
                                                   class="btn btn-success" />

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>
    <!-- /.content -->
</div>
