
@{
    ViewData["Title"] = "Thêm mới tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/Admin">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="~/Admin/ManageAccounts">Quản lý tài khoản</a></li>
                    <li class="breadcrumb-item active">Thêm mới tài khoản</li>
                </ol>
            </div>
        </div>
        <!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <form asp-action="Index">

        <section class="content">
            <div class="container" style="margin-top: 20px; margin-bottom: 20px">
                <div class="main-body">
                    <div class="row gutters-sm">
                        <div class="col-md-8">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <h3>Thêm mới tài khoản</h3>
                                    <hr />
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Username</h6>
                                        </div>
                                        <input class="col-sm-9 text-secondary" name="Username" id="Username" type="text">
                                    </div>
                                    <hr />
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Mật Khẩu</h6>
                                        </div>
                                        <input class="col-sm-9 text-secondary" name="MatKhau" id="MatKhau" type="text">
                                    </div>
                                    <hr />
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Mật Khẩu</h6>
                                        </div>
                                        <select class="profile-input">
                                            <option value="1">Quản trị viên hệ thống</option>
                                            <option value="2">Quản trị viên gia sư</option>
                                            <option value="3">Quản trị viên học viên</option>
                                            <option value="4">Trung tâm hỗ trợ sinh viên</option>
                                        </select>
                                    </div>
                                    <hr/>
                                    <div class="row">
                                        <div class="col-12 flex-right mb-4">
                                            <a href='javascript:history.go(-1)' class="btn btn-secondary mr-3">Quay Lại</a>
                                            <input type="submit" value="Lưu" class="btn btn-success" asp-route-id="" onclick="popup()" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>
    <!-- /.content -->
</div>
<script>
    function popup() {
        alert('Tạo tài khoản mới thành công!');
    }
    $('#myForm').on('submit', function (e) {
        e.preventDefault(); // Now nothing will happen
    });
</script>

