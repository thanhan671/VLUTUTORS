@model VLUTUTORS.Models.Quyen

<div class="modal fade"
     id="editModal-@Model.IdQuyen"
     tabindex="-1"
     role="dialog"
     aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <form method="post" asp-controller="ManageAdminRoles" asp-action="EditRole">
        <input type="hidden" asp-for="IdQuyen" />
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        Chỉnh sửa quyền
                    </h5>
                </div>
                <div class="modal-body">
                    <span class="alert-danger">
                    </span>
                    <div class="form-group">
                        <label for="inputName">Tên loại tư vấn</label>
                        <input asp-for="TenQuyen" type="text" id="TenQuyen" name="TenQuyen" placeholder="Tên môn gia sư (Tối đa 40 ký tự)" class="form-control" data-error="Vui lòng điền đủ thông tin!" required="required" />
                    </div>
                    <span asp-validation-for="TenQuyen" class="help-block with-errors" style="color:red"></span>
                </div>
                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-secondary"
                            data-dismiss="modal">
                        Hủy
                    </button>
                    <button type="submit" class="btn btn-5 custom-btn">Xác nhận</button>
                </div>
            </div>
        </div>
    </form>
</div>