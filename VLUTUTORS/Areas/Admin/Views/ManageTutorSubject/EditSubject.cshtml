@model VLUTUTORS.Models.Mongiasu
@{
    ViewData["Title"] = "Chỉnh sửa môn gia sư";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/Admin">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="~/Admin/ManageTutorSubject">Quản lý môn gia sư</a></li>
                    <li class="breadcrumb-item active">Chỉnh sửa môn gia sư</li>
                </ol>
            </div>
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <form method="post" asp-controller="ManageTutorSubject" asp-action="EditSubject">
        <input type="hidden" asp-for="IdmonGiaSu" />
        <section class="content">
            <div class="container" style="margin-top: 20px; margin-bottom: 20px">
                <div class="main-body">
                    <div class="row gutters-sm">
                        <div class="col-md-8">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <h3>Chỉnh sửa môn gia sư</h3>
                                    <hr />
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Tên môn gia sư</h6>
                                        </div>
                                        <input class="col-sm-9 text-secondary" name="TenMonGiaSu" id="TenMonGiaSu" type="text" value="@Model.TenMonGiaSu">
                                    </div>
                                    <hr />

                                    <div class="row">
                                        <div class="col-12 flex-right mb-4">
                                            <a href='javascript:history.go(-1)' class="btn btn-secondary mr-3">Quay Lại</a>
                                            <input type="submit" value="Lưu" class="btn btn-success" onclick="popup()" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>
    <!-- /.content -->
</div>
<script>
    function popup() {
        alert('Cập nhật thành công!');
    }
    $('#myForm').on('submit', function (e) {
        e.preventDefault(); // Now nothing will happen
    });
</script>
