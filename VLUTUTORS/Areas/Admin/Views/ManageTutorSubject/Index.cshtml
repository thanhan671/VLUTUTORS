@model IEnumerable<VLUTUTORS.Models.Mongiasu>
@{
    ViewData["Title"] = "Quản lý môn gia sư";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2 justify-content-center text-center text-uppercase">
                <div class="col-sm-6">
                    <h1>Quản lý môn gia sư</h1>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Danh sách môn gia sư</h3>
                <div class="card-tools">
                    <button data-toggle="modal"
                            data-target="#addModal"
                            class="col-auto custom-btn btn-5">
                        Thêm môn gia sư
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects" id="myTable">
                    <thead>
                        <tr>
                            <th style="width: 20%">STT</th>
                            <th style="width: 20%">Tên môn gia sư</th>
                            <th style="width: 15%">Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var index = 0;
                            foreach (var item in Model)
                            {
                                index++;
                                <tr>
                                    <td>@index</td>
                                    <td>
                                        @Html.DisplayFor(modeItem => item.TenMonGiaSu)
                                    </td>
                                    <td class="project-actions">
                                        <a class="btn  btn-sm"
                                           data-toggle="modal"
                                           data-target="@("#editModal-"+item.IdmonGiaSu)"
                                           data-url="@Url.Action($"EditSubject/{item.IdmonGiaSu}")">
                                            <i class="fas fa-pen"> </i>
                                            
                                        </a>

                                        @await Html.PartialAsync("_EditTutorSubjectPartial", item)

                                        <a class="btn  btn-sm"
                                           data-toggle="modal"
                                           data-target="#deleteModal"
                                           onclick="document.getElementById('subjectID').value = @item.IdmonGiaSu">
                                            <i class="fas fa-trash"> </i>
                                            
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div class="modal fade"
                 id="addModal"
                 tabindex="-1"
                 role="dialog"
                 aria-labelledby="exampleModalLabel"
                 aria-hidden="true">
                <form method="post" asp-controller="ManageTutorSubject" asp-action="AddSubject">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">
                                    Thêm mới môn gia sư
                                </h5>
                            </div>
                            <div class="modal-body">
                                <span class="alert-danger">
                                </span>
                                <div class="form-group">
                                    <label for="inputName">Tên môn gia sư</label>
                                    <input type="text" id="TenMonGiaSu" name="TenMonGiaSu" class="form-control" data-error="Vui lòng điền đủ thông tin!" required />
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button"
                                        class="btn btn-secondary"
                                        data-dismiss="modal">
                                    Hủy
                                </button>
                                <button type="submit" class="btn btn-primary">Xác nhận</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal fade"
                 id="deleteModal"
                 tabindex="-1"
                 role="dialog"
                 aria-labelledby="deleteModalLabel"
                 aria-hidden="true">
                <form asp-action="DeleteSubject" method="post" asp-controller="ManageTutorSubject">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-body">
                                <h5>Bạn muốn xóa môn gia sư này?</h5>
                            </div>
                            <div class="modal-footer">
                                <button class="btn btn-default" type="button" data-dismiss="modal">
                                    Hủy
                                </button>
                                <button class="btn btn-primary" type="submit">
                                    Đồng ý
                                </button>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" id="subjectID" name="subjectID" />
                </form>
            </div>
            <!-- /.card-body -->
        </div>
        @if (TempData["Message"] != null)
        {
            <script>
            var messageType = '@TempData["MessageType"]';
        var message = '@TempData["Message"]';

        // Display the message using Toastr library
        if (messageType === "success") {
            toastr.success(message);
        } else if (messageType === "error") {
            toastr.error(message);
        } else if (messageType === "warning") {
            toastr.warning(message);
        } else if (messageType === "info") {
            toastr.info(message);
        }
            </script>
        }
        @if (ViewBag.Message != null)
        {
            <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
            </script>
        }
        <script src="~/js/app.js"></script>
        <script>
        $(function () {
    // Check for a success message in TempData
    var toastrSuccess = '@(TempData["toastr-success"])';
    if (toastrSuccess) {
        toastr.success(toastrSuccess);
    }

    // Check for an error message in TempData
    var toastrError = '@(TempData["toastr-error"])';
    if (toastrError) {
        toastr.error(toastrError);
    }
});
        </script>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>

