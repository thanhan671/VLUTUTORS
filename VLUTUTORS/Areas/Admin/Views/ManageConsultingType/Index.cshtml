
@{
    ViewData["Title"] = "Quản lý loại tư vấn";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2 justify-content-center text-center text-uppercase">
                <div class="col-sm-6">
                    <h1>Quản lý loại tư vấn</h1>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Danh sách loại tư vấn</h3>
                <div class="card-tools">
                    <a class="btn btn-primary btn-sm"
                       href="~/Admin/ManageConsultingType/AddType">
                        <i class="fas fa-plus"> </i>
                        Thêm loại tư vấn
                    </a>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 20%">#</th>
                            <th style="width: 40%">Tên loại tư vấn</th>
                            <th style="width: 20%">Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @*@{
                            var index = 0;
                            foreach (var item in Model)
                            {
                                index++;*@
                        <tr>
                            <td>
                                @*@index*@  1
                            </td>
                            <td>
                                @*@Html.DisplayFor(modelItem => item.TaiKhoan)*@    Tên
                            </td>
                            <td class="project-actions">
                                <a class="btn btn-info btn-sm"
                                   asp-action="EditType" asp-controller="ManageConsultingType" asp-route-id="@*@item.Id*@">
                                    <i class="fas fa-pen"> </i>
                                    Sửa
                                </a>
                            </td>
                        </tr>
                        @*}
                            }*@
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>

        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>

