@model VLUTUTORS.Models.Cahoc

<div class="modal fade"
     id="editModal-@Model.IdCaHoc"
     tabindex="-1"
     role="dialog"
     aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <form method="post" asp-controller="ManageTimeClass" asp-action="EditTimeClass">
        <input type="hidden" asp-for="IdCaHoc" />
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        Chỉnh sửa ca dạy
                    </h5>
                </div>
                <div class="modal-body">
                    <span class="alert-danger">
                    </span>
                    <div class="form-group">
                        <label for="inputName">Loại ca</label>
                        <input asp-for="LoaiCa" type="text" id="LoaiCa" name="LoaiCa" class="form-control" data-error="Vui lòng điền đủ thông tin!" required />
                    </div>
                    <div class="form-group">
                        <label for="inputName">Giá tiền</label>
                        <input asp-for="GiaTien" type="number" id="GiaTien" name="GiaTien" class="form-control" data-error="Vui lòng điền đủ thông tin!" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-secondary"
                            data-dismiss="modal">
                        Hủy
                    </button>
                    <button type="submit" class="btn btn-5 custom-btn">Xác nhận</button>
                </div>
            </div>
        </div>
    </form>
</div>