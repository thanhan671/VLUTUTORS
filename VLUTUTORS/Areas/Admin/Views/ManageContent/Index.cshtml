@model VLUTUTORS.Models.Noidung
@{
    ViewData["Title"] = "Quản lý nội dung";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/Admin">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Quản lý nội dung</li>
                </ol>
            </div>
        </div>
        <!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <form asp-action="Index">

        <section class="content">
            <div class="container" style="margin-top: 20px; margin-bottom: 20px">
                <div class="main-body">
                    <div class="row gutters-sm">
                        <div class="col-md-8">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <h3>Thông tin trang chủ</h3>
                                    <hr />
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Câu Slogan</h6>
                                        </div>
                                        <input class="col-sm-9 text-secondary" name="Slogan" id="Slogan" type="text" value="@Model.Slogan">
                                    </div>
                                    <hr />
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Đoạn giới thiệu ở chân trang</h6>
                                        </div>
                                        <textarea class="col-sm-9 text-secondary" name="GioiThieuChanTrang" id="GioiThieuChanTrang" cols="30" rows="10">@Model.GioiThieuChanTrang</textarea>
                                    </div>
                                    <hr />

                                    <h3>Thông tin liên hệ</h3>
                                    <hr />
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Địa chỉ</h6>
                                        </div>
                                        <input class="col-sm-9 text-secondary" name="DiaChi" id="DiaChi" type="text" value="@Model.DiaChi">
                                    </div>
                                    <hr />
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Số Điện Thoại</h6>
                                        </div>
                                        <input class="col-sm-9 text-secondary" name="Sdt" id="Sdt" type="text" value="@Model.Sdt">
                                    </div>
                                    <hr />
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Email</h6>
                                        </div>
                                        <input class="col-sm-9 text-secondary" name="Email" id="Email" type="text" value="@Model.Email">
                                    </div>
                                    <hr />
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Facebook</h6>
                                        </div>
                                        <input class="col-sm-9 text-secondary" name="Facebook" id="Facebook" type="text" value="@Model.Facebook">
                                    </div>
                                    <hr />

                                    <h3>Thông tin trang giới thiệu</h3>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Đoạn giới thiệu</h6>
                                        </div>
                                        <textarea class="col-sm-9 text-secondary" name="GioiThieu" id="GioiThieu" cols="30" rows="10">@Model.GioiThieu</textarea>
                                    </div>
                                    <hr />

                                    <div class="row">
                                        <div class="col-12 flex-right mb-4">
                                            <input type="submit" value="Lưu" class="btn btn-success" asp-route-id="@Model.Id==1" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>
    <!-- /.content -->
</div>

